<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
        <h1 class="h2">{{project.name}}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="/admin/projects/create-new" class="btn btn-sm btn-outline-secondary">Create New</a>
                <a href="/admin/projects/{{project.alias}}/delete" class="btn btn-sm btn-outline-secondary">Delete</a>
            </div>
            <a href="/admin/projects/{{project.alias}}/upload-demo" class="btn btn-sm btn-outline-secondary">
                Upload Demo
            </a>
        </div>
    </div>

    <div>
        <form action="/admin/projects/{{project.alias}}/update" method="POST" enctype="">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" id="name" value="{{project.name}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="alias">Alias</label>
                    <input type="text" class="form-control" name="alias" id="alias" value="{{project.alias}}" readonly>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="github">Github Url</label>
                    <input type="text" name="githubUrl" class="form-control" id="github" value="{{project.githubUrl}}">
                </div>

                <div class="form-group col-md-6">
                    <label for="tag">Tags</label>
                    <input type="text" class="form-control" name="tags" id="tag" value="{{#each project.tags}}{{this.name}},{{/each}}">
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="description">Description</label>
                    <textarea type="text" name="description" class="form-control" id="description" >{{project.description}}</textarea>
                </div>


                <div class="form-group col-md-6">
                    <label for="tag">Cover</label>

                    {{#if project.image}}
                        <img src="{{project.image}}" alt="">
                        <a href="/admin/projects/{{project.alias}}/upload">Change Cover Image</a>
                    {{else}}
                    <a class="btn btn-primary" href="/admin/projects/{{project.alias}}/upload">Upload Image</a>
                    {{/if}}
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</main>